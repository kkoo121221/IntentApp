<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C8E1B6"
    tools:context=".Second_Activity2">

    <Button
        android:id="@+id/btn_swtich2"
        android:layout_width="120dp"
        android:layout_height="49dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/btn"
        android:fontFamily="sans-serif-black"
        android:text="@string/confirm"
        android:textColor="#E78A12"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/credit" />

    <TextView
        android:id="@+id/class_ending2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="250dp"
        android:contentDescription="@string/content_description"
        android:text="@string/class_ending"
        android:textColor="#636C7C"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/credit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:text="@string/content_description"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/class_ending2" />
</androidx.constraintlayout.widget.ConstraintLayout>